    <div class="card col-md-6 offset-md-3">
        <div class="card-body">
            <h2 class="card-title text-center">Invoice</h2>
            <hr>
            <p><b>Listing Name:</b> <%= listing.title %></p>
            <p><b>Location:</b> <%= listing.location %></p>
            <p><b>Price:</b> â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
            <hr>
            <p class="text-center">Thank you for your interest!</p>
        </div>
    </div>
    <div class="text-center mt-3">
        <a href="/listings/<%= listing._id %>" class="btn btn-dark">Back to Listing</a>
    </div>
</div>
