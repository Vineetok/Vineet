<% layout("/layouts/boilerplate.ejs") %>
<style>
    .card {
        border: 1px solid #ddd;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }
    .card-title {
        color: #333;
        font-weight: bold;
    }
</style>

